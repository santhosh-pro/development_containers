{
	"name": "NestJS Dev Environment",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					}
				}
			},
			"extensions": [
				"dbaeumer.vscode-eslint",
				"eamodio.gitlens",
				"Prisma.prisma",
				"analytic-signal.preview-pdf",
				"esbenp.prettier-vscode",
				"AmazonWebServices.aws-toolkit-vscode"
			]
		}
	},
	"remoteUser": "node"
}